{% extends 'admin.html.twig' %}

{% block title %}Liste des packs{% endblock %}

{% block content %}
    <!-- Page Heading -->
    <h2 class="h2 mb-3 text-gray-800">Liste des packs</h2>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Packs</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <a href="{{ path("admin_pack_new") }}"><button class="btn btn-success btn-add">Ajouter un pack</button></a>
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for pack in packs %}
                        <tr>
                            <td>{{loop.index}}</td>
                            <td>
                                <a href="#" data-toggle="collapse" data-target="#collapsePages{{ loop.index }}" aria-expanded="true" aria-controls="collapsePages">{{pack.name}}</a>
                                <div id="collapsePages{{ loop.index }}" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                                    <div class="bg-white py-2 collapse-inner rounded">
                                        <div class="flex-buttons">
                                            <a class="collapse-item" href="{{ path('admin_pack_edit', {'id': pack.id}) }}"><button class="btn btn-warning">Modifier</button></a>
                                            {{ include('admin/_pack_delete_form.html.twig') }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>{{pack.name}}</td>
                            <td>{{pack.price}}</td>
                            <td>{{pack.description|slice(0, 250)}}...</td>
                            <!--<td><img src="{#{{ vich_uploader_asset(service, 'imageFile') }}#}" alt="service image" height="100px" width="auto"/></td>-->
                            <td>
                                <a href="#" data-toggle="collapse" data-target="#collapsePagesHours{{ loop.index }}" aria-expanded="true" aria-controls="collapsePagesHours"><button class="btn btn-primary">Voir</button></a>
                                <div id="collapsePagesHours{{ loop.index }}" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                                    <div class="bg-white py-2 collapse-inner rounded">
                                        {#{% if service.servicePrices.toArray is empty %}
                                            <p>Il n'y a pas de prix additionnels pour ce service</p>
                                        {% else %}
                                            {% for servicePrice in service.servicePrices.toArray %}
                                                <p>{{ servicePrice.name }} - {{ servicePrice.price }}â‚¬</p>
                                            {% endfor %}
                                        {% endif %}#}
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <div class="alert alert-primary alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            {{ "Il n'y a pas encore de packs !" | raw }}
                        </div>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
{% endblock %}
