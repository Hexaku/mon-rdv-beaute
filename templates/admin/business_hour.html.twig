{% extends 'admin.html.twig' %}

{% block title %}Liste des horaires{% endblock %}

{% block content %}
    <!-- Page Heading -->
    <h2 class="h2 mb-3 text-gray-800">Liste des horaires</h2>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Horaires</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <a href="{{ path("admin_business_hour_new") }}"><button class="btn btn-success btn-add">Ajouter un horaire</button></a>
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Jour</th>
                        <th>Heure d'ouverture</th>
                        <th>Heure de fermeture</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for business_hour in business_hours %}
                        <tr>
                            <td>{{loop.index}}</td>
                            <td>
                                <a href="#" data-toggle="collapse" data-target="#collapsePages{{ loop.index }}" aria-expanded="true" aria-controls="collapsePages">{{business_hour.day|day}}</a>
                                <div id="collapsePages{{ loop.index }}" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                                    <div class="bg-white py-2 collapse-inner rounded">
                                        <div class="flex-buttons">
                                            <a class="collapse-item" href="{{ path('admin_business_hour_edit', {'id': business_hour.id}) }}"><button class="btn btn-warning">Modifier</button></a>
                                            {{ include('admin/_business_hour_delete_form.html.twig') }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>{{ business_hour.openTime ? business_hour.openTime|date('H:i') : '' }}</td>
                            <td>{{ business_hour.closeTime ? business_hour.closeTime|date('H:i') : '' }}</td>
                        </tr>
                    {% else %}
                        <h4>Il n'y a pas d'horaires pour ce professionnel !</h4>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}