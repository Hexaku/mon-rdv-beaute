{% extends 'admin.html.twig' %}

{% block title %}Journées bien-être{% endblock %}

{% block content %}
    <h2 class="h2 mb-3 text-gray-800">Les journées bien-être</h2>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Liste des personnes intéressées par les journées bien-être</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <!--<a href="{#{{ path("admin_category_new") }}#}"><button class="btn btn-success btn-add">Ajouter une catégorie</button></a>-->
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contact in contactDay %}
                        <tr>
                            <td>{{loop.index}}</td>
                            <td>{{ contact.name }}</td>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.phone }}</td>
                        </tr>
                    {% else %}
                        <div class="alert alert-primary alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            {{ "Il n'y a pas encore de personnes inscrites !" | raw }}
                        </div>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}
