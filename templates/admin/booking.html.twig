{% extends 'admin.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block content %}
    <!-- Page Heading -->
    <h2 class="h2 mb-3 text-gray-800">Liste des réservations</h2>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Réservations</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom client</th>
                        <th>Mail client</th>
                        <th>Prestation</th>
                        <th>Professionnel</th>
                        <th>Date</th>
                        <th>Heure</th>
                        <th>Durée</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for booking in bookings %}
                        <tr>
                            <td>{{loop.index}}</td>
                            <td>{{ booking.user.firstname }} {{ booking.user.lastname }}</td>
                            <td>{{ booking.user.email }}</td>
                            <td>{{ booking.service.name }}</td>
                            <td>{{ booking.professional.name }}</td>
                            <td>{{ booking.date|date("m/d/Y")  }}</td>
                            <td>{{ booking.hour }}</td>
                            <td>{{ booking.service.duration|duration}}</td>
                        </tr>
                    {% else %}
                        <div class="alert alert-primary alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            {{ "Il n'y a pas encore de réservations !" | raw }}
                        </div>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
