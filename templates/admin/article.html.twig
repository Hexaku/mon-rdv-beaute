{% extends 'admin.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block content %}
    <!-- Page Heading -->
    <h2 class="h2 mb-3 text-gray-800">Liste des articles</h2>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Articles</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <a href="{{ path("admin_article_new") }}"><button class="btn btn-success btn-add">Ajouter une article</button></a>
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Contenu</th>
                        <th>Professionnel</th>
                        <th>Mis en avant</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{loop.index}}</td>
                            <td>
                                <a href="#" data-toggle="collapse" data-target="#collapsePages{{ loop.index }}" aria-expanded="true" aria-controls="collapsePages">{{article.title}}</a>
                                <div id="collapsePages{{ loop.index }}" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                                    <div class="bg-white py-2 collapse-inner rounded">
                                        <div class="flex-buttons">
                                            <a class="collapse-item" href="{{  path('admin_article_edit', {'id': article.id}) }}"><button class="btn btn-warning">Modifier</button></a>
                                            {{ include('admin/_article_delete_form.html.twig') }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>{{article.content|striptags}}</td>
                            <td>{{ article.professional.name }}</td>
                            <td>{{ article.isHomePage ? "oui" : "non" }}</td>
                        </tr>
                    {% else %}
                        <div class="alert alert-primary alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            {{ "Il n'y a pas encore d'articles !" | raw }}
                        </div>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}