{% extends 'base.html.twig' %}

{% block title %}Détail du pack{% endblock %}

{% block body %}
    <div class="container-flex text-center">
        <h1 class="title">{{ pack.name }}</h1>
        <h3 class="service-price mb-3">{{ pack.price }}€</h3>
        <!-- Vich uses to upload a photo for a pack -->
        <img src="{{ vich_uploader_asset(pack, 'imageFile') }}" class="img-fluid rounded mb-5 mt-5"/>
        <h4 class="service-description mb-4">{{ pack.description }}</h4>
    </div>
    <div class="container-flex">
        <p><a href="{{ path('special_day') }}"><button class="btn btn-success">Retour à la liste</button></a></p>
    </div>

    <!-- Modal / pop-up window for people who want more infos about special day (journées bien-être)-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <img src="{{ asset('build/logo-noir.svg') }}"/>
                    <h5 class="modal-title" id="exampleModalLabel">POUR ÊTRE INFORMÉ DE LA PROCHAINE JOURNÉE BIEN-ÊTRE</h5>
                </div>
                <div>
                    {{ include('special_day/_modal_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
