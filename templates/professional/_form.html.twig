

{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    <div class="row">
        <div class="col-6">
            {{ form_row(form.place) }}
        </div>
        <div class="col-6">
            {{ form_row(form.city) }}
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {{ form_row(form.description) }}
        </div>
        <div class="col-6">
            {{ form_row(form.phone) }}
        </div>
    </div>
    {{ form_row(form.imageFile) }}
        <div class="flex-form">
            <h5>Horaires</h5>
            <div class="hours" data-prototype="{{ form_widget(form.businessHour.vars.prototype)|e('html_attr')}}">
                {# iterate over each existing tag and render its only field: name #}
                {% for hour in form.businessHour %}
                    {{ form_row(hour) }}
                {% endfor %}
            </div>
        </div>
    <button class="btn btn-success mt-3">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}

{% block javascripts %}
    {{ encore_entry_script_tags('embed_business_hours') }}
{% endblock %}


