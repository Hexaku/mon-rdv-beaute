{% extends 'base.html.twig' %}

{% block title %}BusinessHour index{% endblock %}

{% block body %}
    <h1>BusinessHour index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Day</th>
                <th>OpenTime</th>
                <th>CloseTime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for business_hour in business_hours %}
            <tr>
                <td>{{ business_hour.id }}</td>
                <td>{{ business_hour.day }}</td>
                <td>{{ business_hour.openTime ? business_hour.openTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ business_hour.closeTime ? business_hour.closeTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('business_hour_show', {'id': business_hour.id}) }}">show</a>
                    <a href="{{ path('business_hour_edit', {'id': business_hour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('business_hour_new') }}">Create new</a>
{% endblock %}
